<Naipe@FloatLayout>:
    id: float_root
    size_hint: (None, None)
    padding: 150
    canvas.before:
        Color:
            rgba: (300, 0, 0, 1)
        Ellipse:
            size: (120, 120)
            pos: self.pos

<ContarInstrumentosTela>:
    name: 'contar_instrumentos'
    GridLayout:
        size_hint_x: (.50)
        pos_hint: {'center_x': .5, 'center_y': .5}
        spacing: 50
        padding: 70
        cols: 2
        canvas.before:
            Color:
                rgba: (240, 248, 0, 1)
            Rectangle:
                pos: self.pos
                size: self.size
